<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_margin="5dp"
    android:descendantFocusability="blocksDescendants"
    android:background="#FFFFFF">

        <ImageView
            android:id="@+id/iv_mk"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img_post"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/cb_heart"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/heart_checkbox2"
            android:button="@color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_mk_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_bold"
            android:text="무료 나눔"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/iv_mk"
            app:layout_constraintTop_toBottomOf="@+id/iv_mk" />


        <TextView
            android:id="@+id/tv_mk_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/roboto_regular"
            android:text="강아지 껌"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_mk_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_mk_title" />

        <ImageView
            android:id="@+id/iv_heart"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="47dp"
            android:src="@drawable/ic_heart_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_mk_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_mk_content"
            app:layout_constraintVertical_bias="0.333" />

        <TextView
            android:id="@+id/tv_mk_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_regular"
            android:text="12"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/iv_mk"
            app:layout_constraintStart_toEndOf="@+id/iv_heart"
            app:layout_constraintTop_toTopOf="@+id/iv_heart" />

</androidx.constraintlayout.widget.ConstraintLayout>