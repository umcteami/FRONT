<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_white">

    <Button
        android:id="@+id/bt_mk_alert1"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:backgroundTint="@color/white"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="맘마/까까"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toTopOf="@+id/bt_mk_alert2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_mk_alert2"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:backgroundTint="@color/white"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="장난감"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toTopOf="@+id/bt_mk_alert3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_mk_alert1" />

    <Button
        android:id="@+id/bt_mk_alert3"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:backgroundTint="@color/white"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="영양제/약/간호용품"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toTopOf="@+id/bt_mk_alert4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_mk_alert2" />

    <Button
        android:id="@+id/bt_mk_alert4"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:backgroundTint="@color/white"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="기타"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_mk_alert3" />

</androidx.constraintlayout.widget.ConstraintLayout>