<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_ttl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:paddingTop="15dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    android:background="@drawable/home_ttl_border">

    <TextView
        android:id="@+id/ttl_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="8dp"
        android:text="자유방"
        android:textColor="@color/main_3"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/ttl_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/ttl_title"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="다니고 계시는 병원 정보 좀 부탁드립니다.(서울/경기)"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/ttl_pictureC"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ttl_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
             />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/ttl_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="해피엄마"
        android:textColor="@color/grey"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ttl_title" />

    <TextView
        android:id="@+id/ttl_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="22.12.18"
        android:textColor="@color/grey"
        android:textSize="11dp"
        android:maxLength="10"
        app:layout_constraintLeft_toRightOf="@id/ttl_writer"
        app:layout_constraintTop_toBottomOf="@id/ttl_title" />

    <TextView
        android:id="@+id/ttl_view"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="조회"
        android:textColor="@color/grey"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ttl_date"
        app:layout_constraintTop_toBottomOf="@id/ttl_title" />

    <TextView
        android:id="@+id/ttl_ViewNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:text="12"
        android:textColor="@color/grey"
        android:textSize="11dp"
        app:layout_constraintLeft_toRightOf="@id/ttl_view"
        app:layout_constraintTop_toBottomOf="@id/ttl_title" />

    <ImageView
        android:id="@+id/ttl_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_heart_grey"
        app:layout_constraintEnd_toStartOf="@+id/ttl_haertNum"
        app:layout_constraintTop_toBottomOf="@+id/ttl_title" />

    <TextView
        android:id="@+id/ttl_haertNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="4"
        android:textColor="@color/black"
        android:textSize="11dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/ttl_comment"
        app:layout_constraintTop_toBottomOf="@+id/ttl_title" />

    <TextView
        android:id="@+id/tl_commentNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="4"
        android:textColor="@color/black"
        android:textSize="11dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/ttl_title"
        app:layout_constraintTop_toBottomOf="@+id/ttl_title" />

    <ImageView
        android:id="@+id/ttl_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_comment_grey"
        app:layout_constraintEnd_toStartOf="@+id/tl_commentNum"
        app:layout_constraintTop_toBottomOf="@+id/ttl_title" />
    /
</androidx.constraintlayout.widget.ConstraintLayout>