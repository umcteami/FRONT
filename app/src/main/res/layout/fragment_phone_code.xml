<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup.PhoneCodeFragment">

    <ImageView
        android:layout_width="197dp"
        android:layout_height="33dp"
        android:layout_gravity="end"
        android:layout_marginRight="16dp"
        android:layout_marginTop="92dp"
        android:src="@drawable/phone_num"/>

    <ImageView
        android:layout_width="213dp"
        android:layout_height="20dp"
        android:src="@drawable/email_code_textview"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="209dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="323dp"
        android:orientation="horizontal"
        android:background="@drawable/email_box">

        <EditText
            android:layout_width="328dp"
            android:layout_height="48dp"
            android:background="@null"
            android:foregroundGravity="fill"
            android:hint="000 0000 0000"
            android:inputType="number"
            android:textColor="#6B6666" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="381dp"
        android:orientation="horizontal"
        android:background="@drawable/email_box">

        <EditText
            android:layout_width="328dp"
            android:layout_height="48dp"
            android:background="@null"
            android:foregroundGravity="fill"
            android:hint="인증 번호를 입력해주세요"
            android:inputType="number"
            android:textColor="#6B6666"/>

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/error"
            android:visibility="invisible"/>

    </LinearLayout>

    <ImageView
        android:layout_width="235dp"
        android:layout_height="40dp"
        android:layout_marginTop="439dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/phone_code_textview"/>

    <ImageView
        android:layout_width="137dp"
        android:layout_height="20dp"
        android:layout_marginTop="439dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/email_code_error_textview"
        android:visibility="invisible"/>

</FrameLayout>