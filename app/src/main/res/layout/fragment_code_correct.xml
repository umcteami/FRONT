<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginActivity"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/main_1"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingTop="31dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton"
            style="?android:borderlessButtonStyle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/bt_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="계정 찾기"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:layout_marginTop="80dp"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="가입하신 이메일 주소"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="79dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/rectangle_email"
            android:paddingTop="25dp"
            android:paddingLeft="110dp"
            android:text="aaa***@gma****"
            android:textSize="21sp"/>

        <Button
            android:id="@+id/bt_find_pw"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="68dp"
            android:text="비밀번호 찾기"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"
            android:background="@drawable/bt_rectangle"/>

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="10dp"
            android:text="확인"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_bold"
            android:background="@drawable/bt_rectangle" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>