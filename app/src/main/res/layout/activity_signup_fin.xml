<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup.SignupFinActivity"
    android:background="@color/main_1">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_logo_signup"
        android:background="#00ff0000"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_signup_fin"/>

    <TextView
        android:id="@+id/tv_signup_fin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입 완료"
        android:textSize="40sp"
        android:textColor="#454545"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_thank"/>

    <TextView
        android:id="@+id/tv_thank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이의 가족이 되어주셔서 감사합니다."
        android:textColor="#454545"
        android:textSize="20dp"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_signup_fin"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bt_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="36dp"
        android:minHeight="60dp"
        android:text="시작하기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>