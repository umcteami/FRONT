<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Signup.NicknameFragment">

    <ImageView
        android:id="@+id/nickname_num"
        android:layout_width="197dp"
        android:layout_height="33dp"
        android:layout_gravity="end"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/nickname_num"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계정 설정을 완료하세요"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="21dp"
        android:fontFamily="@font/roboto"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:lineSpacingExtra="-3sp"
        app:layout_constraintTop_toBottomOf="@+id/nickname_num"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <FrameLayout
        android:id="@+id/fl_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_nickname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/nickname_imageview" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/nickname_button2"
            android:src="@drawable/nickname_button"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_nickname2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="19dp"
        app:layout_constraintTop_toBottomOf="@+id/fl_profile"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_nickname"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/nickname_box"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tv_nickname2"
        tools:layout_editor_absoluteX="16dp">

        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="@null"
            android:fontFamily="@font/roboto"
            android:hint="닉네임을 입력해주세요"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColor="#A6A6A6"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ib_nic"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ib_nic"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:src="@drawable/nickname_check"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/et_nickname"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="SpeakableTextPresentCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <TextView
        android:id="@+id/tv_nickname3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임은 최대 10자까지 입력할 수 있습니다."
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/cl_nickname"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(선택) 한 줄 소개"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="19dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_nickname3"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_intro"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/nickname_box"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tv_intro"
        tools:layout_editor_absoluteX="16dp">

        <EditText
            android:id="@+id/et_intro"
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="14dp"
            android:fontFamily="@font/roboto"
            android:hint="한 줄 소개를 입력해주세요"
            android:inputType="textMultiLine"
            android:minHeight="48dp"
            android:textColor="#A6A6A6"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_intro2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="한 줄 소개는 최대 50자까지 입력할 수 있습니다."
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/cl_intro"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>