<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginActivity"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/bt_back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="계정 찾기"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:layout_marginTop="80dp"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:text="새로운 비밀번호를 설정해주세요"
            android:textSize="20sp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/new_pwd"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/gray">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:hint="새로운 비밀번호 입력"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_regular"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/check_pw"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
             app:endIconMode="password_toggle"
            app:endIconTint="@color/gray">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:hint="비밀번호 재확인"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_regular"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="· 비밀번호는 8~16자이어야 합니다.\n· 비밀번호는 영문과 특수문자, 숫자를 모두 포함해야 합니다.\n· 새로운 비밀번호는 이전 비밀번호와는 달라야합니다."
            android:fontFamily="@font/roboto_regular"
            android:textSize="11sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_ok"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="25dp"
            android:text="확인"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_bold"
            android:background="@drawable/bt_rectangle" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>